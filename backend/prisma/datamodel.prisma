enum UserType {
  ADMIN
  USER
}

type User {
  id: ID! @id
  userType: UserType!
  email: String! @unique
  password: String!
  api_hash: String
  apis: [Api]! @relation(name: "UserApis")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Api {
  id: ID! @id
  api_id: String @unique
  api_name: String @unique
  api_root_url: String
  urls: [Url]! @relation(name: "ApiUrls")
  users: [User]! @relation(name: "UserApis")
}

type Url {
  id: ID! @id
  url: String
  methods: String
  api: Api @relation(name: "ApiUrls")
}