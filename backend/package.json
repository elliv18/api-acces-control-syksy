{
  "name": "api-access-control-backend",
  "version": "0.1",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "yarn build && concurrently -n prisma,prettier,serve \"yarn dev-prisma\" \"yarn dev-prettier\" \"yarn dev-serve\"",
    "dev-prisma": "nodemon -w datamodel.prisma --exec 'yarn prisma reset --force && yarn prisma generate && yarn prisma deploy --force'",
    "dev-prettier": "onchange 'src/**/*.{ts,tsx}' -- prettier --write {{changed}}",
    "dev-serve": "sleep 5 && tsc-watch -w --noClear --onSuccess 'node --max-old-space-size=2048 build/src/index.js'",
    "build": "rm -rf build && mkdir build && yarn prisma generate && tsc",
    "start": "yarn prisma deploy && node build/src/index.js",
    "lint": "yarn lint-prettier && yarn lint-ts",
    "lint-ts": "tslint -p tsconfig.json -t stylish -e '**/*.spec.{ts,tsx}' 'src/**/*.{ts,tsx}'",
    "lint-prettier": "prettier --check 'src/**/*.{ts,tsx}'",
    "prisma:force-deploy": "yarn prisma deploy --force",
    "prisma:force-reset": "yarn prisma reset --force"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.144",
    "@types/moment-timezone": "^0.5.12",
    "@types/node": "^12.11.5",
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.0.0",
    "dotenv-parse-variables": "^0.2.3",
    "graphql": "^14.5.8",
    "graphql-middleware": "^4.0.1",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.19.4",
    "prisma": "^1.34.10",
    "prisma-client-lib": "^1.34.10",
    "tsc-watch": "^4.0.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1"
  },
  "devDependencies": {
    "onchange": "^6.1.0",
    "prettier": "^1.18.2",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  }
}
